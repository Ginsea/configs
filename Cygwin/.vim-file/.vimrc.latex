	  \<CR>
	  \\correspondingauthor{a}  <CR>
          \\email{a}  <CR>
	  \<CR>
	  \\author{a}  <CR>
	  \%\altaffiliation{a}  <CR>
	  \\affiliation{a}  <CR>
	  \<CR>
	  \\begin{abstract}  <CR>
	  \<CR>
	  \\end{abstract}  <CR>
	  \<CR>
	  \\keywords{a}  <CR>
	  \<CR>
          \%\acknowledgments{a}  <CR>
          \%\section*{Acknowledgments}  <CR>
          \<CR>
          \\bibliographystyle{aasjournal}  <CR>
          \\bibliography{:r! echo %:t:r kJx$a} <CR>
          \%===========================================================================================  <CR>
          \\end{document} kkkkkkkkkkkkkkkkkkkkkkkkkk0wwa


